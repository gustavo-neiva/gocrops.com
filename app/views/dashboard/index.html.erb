<div class="grid-dashboard__index">
  <h2 class="section-main-title section-title">My Crops Trends</h2>
	<div class="section-main">
    <% current_user.crops.each do |crop| %>
      <% product = Product.find(crop.product_id) %>
  		<div class="trend_card box-component grid-trends">
  			<div class="trend-product trend-text__heavy">
            <span class="ic-<%=product.name.split.join.downcase%>"></span>
          <p><%= product.name.downcase %></p>
        </div>
  			<p class="current-price-title price-trend-title">Current Month</p>
  			<span class="current-price-content trend-text__heavy">$<%= product.current_month %>/kg</span>
  			<p class="next-price-title price-trend-title">Next Month</p>
  			<span class="next-price-content trend-text__heavy">$55/kg</span>
        <div class="trend-arrow trend-text__heavy">
          <i class="fa fa-arrow-up" aria-hidden="true"></i>
        </div>
        <div class="trend-graph graph"><%= line_chart product.historic_data_array('20150101', '20170801') %></div>
  		</div>
    <% end %>
	</div>
  <h2 class="section-sidebar-title section-title">Utilities</h2>
	<div class="section-sidebar grid-utilities">
    <div class="utility_card box-component box-section__padding">
			<div class="utility_icon">Sky</div>
      <img src="http://openweathermap.org/img/w/<%="#{session[:weather]["weather"].first["icon"]}.png"%>" alt="">
			<span><%= weather_description %></span>
		</div>
    <div class="utility_card box-component box-section__padding">
			<div class="utility_icon">Wind Seed</div>
			<span><%= "#{wind_speed.round(2).to_s} m/s" %></span>
		</div>
    <div class="utility_card box-component box-section__padding">
			<div class="utility_icon">Temperature</div>
			<span><%= "#{temp_max.round(2).to_s} Â°C" %></span>
		</div>
    <div class="utility_card box-component box-section__padding">
			<div class="utility_icon">Air humidity</div>
			<span><%= "#{humidity.round(2).to_s}%" %></span>
		</div>
    <div class="utility_card box-component box-section__padding">
			<div class="utility_icon">Sun Hours</div>
      <% sunrise_time %>
      <% sunset_time %>
			<span><%= hours_sun %></span>
		</div>
	</div>
</div>
