<h2>Edit Farm</h2>

<%= simple_form_for @user, url: dashboard_farms_edit_path do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :email, required: true, autofocus: true %>

    <%= f.input :farm_name %>
    <%= f.input :farm_location %>
    <%= f.input :farm_size %>
    <%= f.input :farm_certification %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Update" %>
  </div>
<% end %>

<%= link_to "Back", :back %>