<div class="row justify-content-left">
  <div class="col-sm-8">
    <table>
      <thead>
        <th>Product</th>
        <th>Quantity</th>
        <th>Can Transport?</th>
        <th>Description</th>
      </thead>
      <tr>
          <td><%= @crop.product.name %></td>
          <td><%= @crop.production %></td>
          <td><%= @crop.transport ? 'Yes' : 'No'  %></td>
          <td><%= @crop.description %></td>
          <td><%= link_to "Edit", edit_dashboard_crop_path(@crop) %></td>
          <td><%= link_to "Return", dashboard_crops_path%></td>
      </tr>
    </table>
  </div>
  <div class="col-sm-4">
    <%= render "harvest_form" %>
  </div>
</div>
