<div class="modal fade" id="newCropModal" tabindex="-1" role="dialog" aria-labelledby="newCropModal">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h4 class="modal-title" id="newCropModalLabel">Add a new crop:</h4>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
      </div>
      <div class="modal-body">
        <%= simple_form_for @crop, url: dashboard_crops_path do |f| %>
          <%= f.association :product, collection: Product.where.not(id: current_user.crops.pluck(:product_id)).order(:name) %>
          <%= f.input :description, as: :text %>
          <%= f.input :transport, as: :boolean %>
          <%= f.submit class: "btn btn-success" %>
        <% end %>
      </div>
    </div>
  </div>
</div>
