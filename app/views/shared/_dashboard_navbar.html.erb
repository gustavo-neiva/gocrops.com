<div class="navbar__dashboard">
  <!-- Avatar -->
  <div class="navbar__dashboad__item navbar__user__info">
      <%= cl_image_tag current_user.user_avatar, class: "avatar" %>
      <% if current_user.first_name.present? && current_user.last_name.present? %>
      <p class="navbar__dashboard__item navbar__dashboard__name"><%= "#{current_user.first_name.capitalize}  #{current_user.last_name.capitalize}"%></p>
      <% end %>
  </div>


  <!-- Right Navigation -->
  <div class="navbar__dashboard__right">
    <%= link_to "Dashboard", dashboard_path, class: "navbar__dashboard__item navbar__dashboard__link #{@dashboard_class}" %>
    <%= link_to "Crops",  dashboard_crops_path, class: "navbar__dashboard__item navbar__dashboard__link #{@crops_class}" %>
    <%= link_to "Profile", dashboard_profile_path, class: "navbar__dashboard__item navbar__dashboard__link #{@profile_class}" %>
    <%= link_to "Logout", destroy_user_session_path, method: :delete, class: "navbar__dashboard__item navbar__dashboard__link navbar__dashboard__link--logout" %>
  </div>
</div>
